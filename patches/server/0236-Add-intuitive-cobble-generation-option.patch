Subject: [PATCH] Add intuitive cobble generation option


diff --git a/src/main/java/net/minecraft/server/BlockFluids.java b/src/main/java/net/minecraft/server/BlockFluids.java
index 4d4eba14..65313a82 100644
--- a/src/main/java/net/minecraft/server/BlockFluids.java
+++ b/src/main/java/net/minecraft/server/BlockFluids.java
@@ -3,6 +3,8 @@ package net.minecraft.server;
 import java.util.Iterator;
 import java.util.Random;
 
+import org.github.paperspigot.PaperSpigotConfig;
+
 public abstract class BlockFluids extends Block {
 
     public static final BlockStateInteger LEVEL = BlockStateInteger.of("level", 0, 15);
@@ -152,7 +154,7 @@ public abstract class BlockFluids extends Block {
                 Block formed = null;
                 if (integer == 0) {
                     formed = Blocks.OBSIDIAN;
-                    } else if (integer <= 4) {
+                } else if (integer <= 4 || PaperSpigotConfig.intuitiveCobblestoneGeneration) {
                     formed = Blocks.COBBLESTONE;
                 }
 
diff --git a/src/main/java/org/github/paperspigot/PaperSpigotConfig.java b/src/main/java/org/github/paperspigot/PaperSpigotConfig.java
index b168f510..9c42242f 100644
--- a/src/main/java/org/github/paperspigot/PaperSpigotConfig.java
+++ b/src/main/java/org/github/paperspigot/PaperSpigotConfig.java
@@ -233,6 +233,11 @@ public class PaperSpigotConfig
         includeRandomnessInBobberTrajectory = getBoolean("settings.include-randomness-in-bobber-trajectory", includeRandomnessInBobberTrajectory);
     }
 
+    public static boolean intuitiveCobblestoneGeneration = false;
+    private static void intuitiveCobblestoneGeneration() {
+        intuitiveCobblestoneGeneration = getBoolean("settings.intuitive-cobblestone-generation", intuitiveCobblestoneGeneration);
+    }
+
     public static boolean tickEmptyWorlds = true;
     private static void tickEmptyWorlds() {
         tickEmptyWorlds = getBoolean("settings.tick-empty-worlds", tickEmptyWorlds);
